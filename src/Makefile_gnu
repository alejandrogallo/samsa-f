../bin/samsa.x : constants.o data.o ints.o energy.o samsa.o
	gfortran constants.o data.o ints.o energy.o samsa.o -o ../bin/samsa.x

constants.o : constants.f90
	gfortran -c constants.f90 

data.o : data.f90
	gfortran -c data.f90 

ints.o : ints.f90
	gfortran -c ints.f90 

energy.o : energy.f90 
	gfortran -c energy.f90 

samsa.o : samsa.f90
	gfortran -c samsa.f90 
